@model IEnumerable<Spicee.DomainModels.ShoppingCart>

    @{
        ViewBag.Title = "Cart Details";
    }
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>




    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li style="color:wheat">
                        <i class="fa fa-shopping-cart" style="color:white"></i>
                        ShoppingCart

                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li> @Html.ActionLink("ContinueShopping", "Index", new { Controller = "Home" }, new { @class = "btn btn-block" })</li>
                </ul>
            </div>
        </div>
    </div>



    <div class="col-25">
        @{
            double Total = 0;


        }
    </div>

    <table class="table table-bordered">

        @foreach (var item in Model)
        {




            <tr>



                <th><img class="img-responsive" src="@Url.Content(item.MenuItem.Image)" style="width:300px; height:auto;border-radius:50px" /></th>
                <th><p>@item.MenuItem.Name</p></th>
                <th><p>@item.MenuItem.Description</p></th>
                <th style="width:100px"> <p>@item.MenuItem.Price x @item.Count</p></th>


                <th><p>@item.Count</p></th>



                <th><a href="~/Home/CartPlus?cartid=@item.Id" type="submit" class="btn btn-info form-control"><i class="fas fa-plus-square"></i></a></th>
                @*<th>
                    <p>

                        <a href="~/Home/CartPlus?cartid=@item.Id" class="btn btn-info">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </p>
                        </th>*@
                <th>
                    <p>

                        <a href="~/Home/CartMinus?cartid=@item.Id" class="btn btn-danger">
                            <span class="glyphicon glyphicon-minus"></span>
                        </a>
                    </p>
                </th>
                <th>
                    <p>

                        <a href="~/Home/CartRemove?cartid=@item.Id" class="btn btn-danger">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </p>
                </th>

            </tr>

            {
                Total = (item.MenuItem.Price * item.Count) + Total;

            }

        }
    </table>
    <div style="color:blue">
        Total $@Total

        <br />
        <br />
        <p class="text-primary mb-0">
            <i class="fas fa-info-circle mr-1"></i> Do not delay the Order, adding
            items to your cart does not mean booking them.
        </p>
    </div>
    @Html.ActionLink("Back", "Menu", "Home", new { @class = "btn btn-primary" })
    @Html.ActionLink("Place Order", "OrderSummary", "Home", new { @class = "btn btn-primary" })

















































