@model IEnumerable<Spicee.DomainModels.Category>

@{ ViewBag.Title = "Index"; }

<h2>Index</h2>

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
<table class="table table-striped border">
    <tr class="table-secondary">
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Name)
    </td>
    <td>
        <partial name="_TableButtonPartial" model="item.Id" />
    <td>@Html.ActionLink("Details", "Details", new { @item.Id, Controller = "Category" })</td>
    <td><a href="/Category/Create" class="btn btn-info">Add</a></td>
    <td><a href="/Category/Edit/@item.Id" class="btn btn-primary">Update</a></td>
    <td><a href="/Category/Delete/@item.Id" class="btn btn-danger">Delete</a></td>

</tr>                }
</table> }
            else
            {
<p>No category exists...</p>}
    </div>

</div>

